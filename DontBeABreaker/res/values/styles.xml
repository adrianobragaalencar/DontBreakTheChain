<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
        
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">        
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>
    
    <style name="SplashScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/white</item>      
    </style>
    
    <style name="MainScreen" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/white</item>      
    </style>
    
    <style name="NewTaskScreen" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/white</item>      
    </style>
    
    <style name="ChainTaskScreen" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/white</item>      
    </style>

    <style name="FixedChainTaskScreen" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/white</item>      
    </style>
    
    <style name="TwitterWriteScreen" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/white</item>      
    </style>           
    
    <style name="CustomPopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>
    
	<style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>    
    
    <style name="CustomActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/white</item>
         <item name="android:textColor">@color/black</item>
         <item name="android:windowContentOverlay">@color/black</item>         
    </style>    
    
</resources>
